openssl req -text -noout -verify -in guler.csr   #CSR iÃ§eriÄŸini doÄŸrula.
openssl x509 -req -days 365 -in guler.csr -signkey faruk.key -out sertifika.crt -sha256 #Self-Signed Sertifika oluÅŸtur. [.crt .pem .key .pfx]
openssl x509 -in sertifika.crt -text -noout      #SertifikayÄ± DoÄŸrula
