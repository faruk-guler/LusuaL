# >> /etc/network/interfaces

# 2 tatic interfaces [Debian 12 Bookworm]
# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).

source /etc/network/interfaces.d/*

# The loopback network interface
auto lo
iface lo inet loopback

# NAT Interface (Internet/External Network) - enp2s5
allow-hotplug ens33
iface ens33 inet static
    address 192.168.47.171
    netmask 255.255.255.0
    gateway 192.168.47.2
    dns-nameservers 192.168.47.2 1.1.1.1 8.8.4.4
    dns-domain guler.com

# Host-only Interface (Internal Network) - enp2s5
allow-hotplug enp2s5
iface enp2s5 inet static
    address 192.168.26.130
    netmask 255.255.255.0
  # dns-nameservers 192.168.47.2 1.1.1.1 8.8.4.4
  # NO GATEWAY - only local network


